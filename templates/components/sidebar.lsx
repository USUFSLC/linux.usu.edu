(lambda
  (&key
    (user nil))
  <div>
    <a id="theme-switcher"><img id="theme-icon" src="/images/sun.svg" alt="Theme picker"></a>
    <hr>
    <ul>
      {
        (if user
            <div>
              <p>Signed in as {(usufslc.db.user::user-name user)}</p>
              <a href="/logout">Logout</a>
            </div>
            <a href="/login">Login</a>)
      }
    </ul>
    <hr>
  </div>)
