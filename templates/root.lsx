(lambda
  (&key
    (title "USU FSLC")
    (motd "welcome to our small corner of the internet")
    (page-title nil)
    (info nil)
    (error nil)

    (sidebar nil)
    (content nil))

  <html>
    <head>
      <title>{title}</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="/css/style.css" />
      <script src="/js/util/setThemeBeforeRender.js" />

      <script src="/js/main.js" defer />
    </head>
    <body>
      <noscript>You should have JavaScript enabled, man!</noscript>
      <div id="modal" class="modal"> </div>

      <div id="sidebar">
        <div class="sidebar-container">
          {sidebar}
        </div>
      </div>

      <div id="content" class="main">
        <div class="header">
          <a id="sidebar-toggle">
            <span></span>
            <span></span>
            <span></span>
          </a>

          <a href="/" class="title"><h1 class="primary">USU FSLC</h1></a>
          <br />
          <p class="secondary"><em>{motd}</em></p>
        </div>
        <div class="container">
          {(if page-title
            <div class="page-title">
              <h2 class="primary">{page-title}</h2>
            </div>
          )}

          {(if info
               <div class="alert info">{info}</div>
           )}
          {(if error
               <div class="alert warn">{error}</div>
           )}

          {content}
        </div>
        <div class="footer">
          <a href="/conduct">Code of Conduct</a>
          <a href="/license">License</a>
          <a href="/credits">Credits</a>
        </div>
      </div>
    </body>
  </html>
)
